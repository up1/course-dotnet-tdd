					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response schema is valid\", function () {",
							"    const response = pm.response.json();",
							"    const dateRegex = /^\\d{4}-\\d{2}-\\d{2}$/;",
							"    ",
							"    // Validate response is an array",
							"    pm.expect(response).to.be.an('array');",
							"    pm.expect(response.length).to.be.greaterThan(0);",
							"    ",
							"    // Validate each object in the array",
							"    response.forEach((item, index) => {",
							"        // Check required properties exist",
							"        pm.expect(item).to.have.property('date');",
							"        pm.expect(item).to.have.property('temperatureC');",
							"        pm.expect(item).to.have.property('summary');",
							"        pm.expect(item).to.have.property('temperatureF');",
							"        ",
							"        // Validate data types",
							"        pm.expect(item.date).to.be.a('string', `Item ${index}: date should be a string`);",
							"        pm.expect(item.temperatureC).to.be.a('number', `Item ${index}: temperatureC should be a number`);",
							"        pm.expect(item.summary).to.be.a('string', `Item ${index}: summary should be a string`);",
							"        pm.expect(item.temperatureF).to.be.a('number', `Item ${index}: temperatureF should be a number`);",
							"        ",
							"        // Validate date format (YYYY-MM-DD)",
							"        pm.expect(item.date).to.match(dateRegex, `Item ${index}: date should be in YYYY-MM-DD format`);",
							"    });",
							"});"
						],
